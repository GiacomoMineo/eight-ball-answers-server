{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["standard", "standard-react"],
  "plugins": ["react", "jsx-a11y", "import"],
  "rules": {
    "arrow-parens": 0,
    "generator-star-spacing": 0,
    "jsx-quotes": ["error", "prefer-double"],
    "max-len": [
      "error",
      {
        "code": 120,
        "comments": 120,
        "tabWidth": 2
      }
    ]
  },
  "globals": {
    "fetch": false,
    "Response": false,
    "FormData": false
  }
}
